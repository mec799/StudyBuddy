<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/siyah"
    tools:context=".AddEtut">

    <EditText
        android:id="@+id/etut_tekrar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Kaç Tekrar Etüt Yapılacak ?"
        android:inputType="date"
        android:textColor="@color/en_siyah"
        android:textColorHint="@color/en_siyah"
        app:backgroundTint="@color/en_siyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tenefus_dakika" />

    <EditText
        android:id="@+id/tenefus_dakika"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Tenefüs Kaç Dakika Sürecek"
        android:inputType="date"
        android:textColor="@color/en_siyah"
        android:textColorHint="@color/en_siyah"
        app:backgroundTint="@color/en_siyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etut_dakika" />

    <EditText
        android:id="@+id/etut_dakika"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Etüt Kaç Dakika Sürecek ?"
        android:inputType="date"
        android:textColor="@color/en_siyah"
        android:textColorHint="@color/en_siyah"
        app:backgroundTint="@color/en_siyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etut_time" />

    <ImageView
        android:id="@+id/etut_pp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <EditText
        android:id="@+id/etut_isim"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Etüt Başlığını Giriniz"
        android:inputType="textPersonName"
        android:maxLength="12"
        android:textColor="@color/en_siyah"
        android:textColorHint="@color/en_siyah"
        app:backgroundTint="@color/en_siyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etut_pp" />

    <Button
        android:id="@+id/etut_add_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Etüt Oluştur "
        app:backgroundTint="@color/en_siyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etut_tekrar" />

    <EditText
        android:id="@+id/etut_time"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"

        android:ems="10"
        android:focusableInTouchMode="false"
        android:hint="Etüt Saati "
        android:inputType="textPersonName"
        android:textColor="@color/en_siyah"
        android:textColorHint="@color/en_siyah"
        app:backgroundTint="@color/en_siyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etut_tarihi" />

    <EditText
        android:id="@+id/etut_tarihi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Etüt Tarihi ( gg/aa/yyyy)"
        android:inputType="date"
        android:textColor="@color/en_siyah"
        android:textColorHint="@color/en_siyah"
        app:backgroundTint="@color/en_siyah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etut_isim" />

</androidx.constraintlayout.widget.ConstraintLayout>