<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/siyah"
    android:padding="10dp">



    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Neyin Hatırlatılmasını İstiyorsun ?"
        android:textColor="@color/en_siyah"
        android:textColorHint="@color/en_siyah"
        app:backgroundTint="@color/en_siyah" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="310dp"
        android:amPmBackgroundColor="@color/en_siyah"
        android:layout_height="360dp"

        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/setBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Ayarla"
            app:backgroundTint="@color/en_siyah" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="İptal"
            app:backgroundTint="@color/en_siyah" />
    </LinearLayout>

</LinearLayout>